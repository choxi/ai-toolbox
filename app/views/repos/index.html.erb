<!DOCTYPE html>
<html>
  <%= render "layouts/head" %>
  <body>
    <% flash.each do |type, content|%>
      <div class="flash-<%= type %>">
        <div class="container">
          <%= content %>
        </div>
      </div>
    <% end %>

    <div class="ai-toolbox">
      <div class="hero">
        <div class="container">
          <div class="row navigation">
            <div class="six columns">
              <h1><%= link_to "monk", root_path %></h1>
            </div>
            <div class="six columns menu">
              <div class="u-pull-right">
                <%= link_to "home", root_path %>
                <%= link_to "blog", "http://trymonk.com/blog" %>
                <%= link_to "submit a repo", new_repo_path %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="two columns">&nbsp;</div>
            <div class="three columns">
              <%= image_tag "Logo - Figure.png", class: "robot" %>
            </div>
            <div class="five columns">
              <div class="search">
                <h2 class="title">AI Toolbox</h2>
                <h6>Search for the most popular open source AI libraries</h6>
                <%= form_tag search_repos_path do %>
                  <%= text_field_tag :query %>
                  <%= submit_tag "Search", class: "button-primary" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="container">
        <div class="row">
          <div class="two columns">
            &nbsp;
          </div>
          <div class="eight columns">
            <% @repos.each do |repo| %>
              <div class="repo">
                <div class="row">
                  <div class="eight columns">
                    <a href="<%= repo.github_url %>" target="_blank">
                      <h6 class="name"><%= repo.user %> / <%= repo.name %></h6>
                    </a>
                  </div>
                  <div class="four columns">
                    <div class="timestamp">Created <%= time_ago_in_words(repo.github_created_at) %> ago</div>
                  </div>
                </div>
                <div class="row">
                  <div class="three columns">
                    <table class="stats">
                      <tr><td>Forks:</td><td><%= repo.forks_count %></td></tr>
                      <tr><td>Stargazers:</td><td><%= repo.stargazers_count %></td></tr>
                      <tr><td>Watchers:</td><td><%= repo.subscribers_count %></td></tr>
                    </table>
                  </div>
                  <div class="nine columns">
                    <p><%= repo.description %> </p>
                  </div>
                </div>

                <div class="commit_activity">
                  <b>Commit Activity</b>
                  <table>
                    <% 7.times do |day| %>
                      <tr>
                        <% 52.times do |week| %>
                          <td style="opacity: <%= repo.commit_activity[week]["days"][day] / 50.0 %>"> </td>
                        <% end %>
                      </tr>
                    <% end %>
                  </table>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <script>
      window.intercomSettings = {
        app_id: "a7vkcdpl"
      };
    </script>
    <script>(function(){var w=window;var ic=w.Intercom;if(typeof ic==="function"){ic('reattach_activator');ic('update',intercomSettings);}else{var d=document;var i=function(){i.c(arguments)};i.q=[];i.c=function(args){i.q.push(args)};w.Intercom=i;function l(){var s=d.createElement('script');s.type='text/javascript';s.async=true;s.src='https://widget.intercom.io/widget/a7vkcdpl';var x=d.getElementsByTagName('script')[0];x.parentNode.insertBefore(s,x);}if(w.attachEvent){w.attachEvent('onload',l);}else{w.addEventListener('load',l,false);}}})()</script>
    <div class="footer">
      Follow me <a href="https://twitter.com/choxi">on Twitter.</a>
    </div>
  </body>
</html>
